{
    "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
    "files": {
        "ignoreUnknown": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab",
        "indentWidth": 2,
        "lineWidth": 100,
        "formatWithErrors": true
    },
    "json": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4
        }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "enabled": true,
            "indentStyle": "tab",
            "indentWidth": 2,
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "quoteStyle": "double",
            "semicolons": "always"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noArrayIndexKey": "warn"
            }
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": true,
        "useIgnoreFile": true
    }
}
